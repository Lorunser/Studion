@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@Url.Action("ProfilePage", "Users", new { UserID = User.Identity.GetUserId()})">Hello there @User.Identity.GetUserName()</a>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
        </ul>           
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Register", "Account")">Register</a>
        </li>
        <li>
            <a href="@Url.Action("Login", "Account", new { returnUrl = Request.Url.AbsolutePath})" >Log in</a>
        </li>
    </ul>
}
